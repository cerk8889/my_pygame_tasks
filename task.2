HEIGHT, WIDTH = 600, 900
MINT = (230, 254, 212)
ORANGE = (255, 150, 100)

pg.init()
screen = pg.display.set_mode((WIDTH, HEIGHT))
pg.display.set_caption("Игра")
clock = pg.time.Clock

Dx = 2
r = 30
x = 50
y = 50
pg.draw.circle(screen, ORANGE, (x,y),r)
pg.display.update()

flag_play = True
while flag_play:



    for event in pg.event.get():
        if event.type == pg.QUIT:
            pg.quit()
            flag_play = False
            break
    if not flag_play:
        break


    if x <= 800 and y == 50:
        x += Dx

    if x == 800 and y <= 500:
        y += Dx

    if x > 50 and y == 500:
        x -= Dx

    if x == 50 and y > 50:
        y -= Dx

    screen.fill(MINT)
    pg.draw.circle(screen, ORANGE, (x, y), r)

    pg.display.update()
